import sys
import os
import datetime
import psycopg2
import time

# Connect to database
db = psycopg2.connect("host=beyond dbname=redbus user=redbus password=password")
dbcur = db.cursor()

dates = [] 
dbcur.execute("SELECT DISTINCT created_date FROM services ORDER BY created_date ASC")
for row in dbcur:
    dates.append(row[0])

if len(sys.argv) != 2:
    for date in dates:
        print(date)
else:
    date = sys.argv[1]
    if date == "LATEST":
        date = dates[len(dates)-1]
    
    dbcur.execute("DELETE FROM stops_services WHERE created_date = %s", (date, ));
    dbcur.execute("DELETE FROM services WHERE created_date = %s", (date, ));
    dbcur.execute("DELETE FROM stops WHERE created_date = %s", (date, ));

db.commit();
dbcur.close()
db.close()
