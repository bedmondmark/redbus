<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
	<ListView android:id="@+id/nearbystopslist" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" />

	<TextView android:id="@+id/nearbynobookmarks" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:text="Unable to find any nearby bookmarks."
	android:textAppearance="@style/textappearance_help"/>
	
	<TextView android:id="@+id/nearbybookmarkednoservices" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:text="There are currently no departures from your nearby bookmarks."
	android:textAppearance="@style/textappearance_help"/>
</LinearLayout>
