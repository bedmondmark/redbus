<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
	<ListView android:id="@android:id/list" android:layout_width="fill_parent" android:layout_height="wrap_content" />
	<TextView android:id="@+id/trafficinfo_none" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="There is no traffic information" android:visibility="gone" />
	<TextView android:id="@+id/trafficinfo_error" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="An error occured while fetching traffic information" android:visibility="gone" />
</LinearLayout>
